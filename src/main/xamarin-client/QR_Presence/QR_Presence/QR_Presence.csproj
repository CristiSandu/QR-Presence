  <ItemGroup>
    <Folder Include="Convertors\" />
    <Folder Include="Services\" />
    <Folder Include="ViewModels\" />
  </ItemGroup>

  <ItemGroup>
    <SharedImage Include="Img\course.svg" BaseSize="211,164" />
